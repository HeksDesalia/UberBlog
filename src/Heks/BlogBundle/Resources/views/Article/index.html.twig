{% extends 'base.html.twig' %}
{% block title %}ÜberBlog{% endblock %}

{% block body %}
<!-- Banner -->
  <section id="banner">
    <header>
      <h2>ÜberBlog</h2>
    </header>
  </section>

  {% for d in documents %}
    {% for document in d %}
      <article id="first" class="container box style1 right">
        <a href="#" class="image fit"><img src="{{asset('images/pic01.jpg')}}" alt="" /></a>
        <div class="inner">
          <header>
            <h2><a href="{{ path('article_show', { 'id': document.id }) }}">{{ document.titre }}</a></h2>
            <p> Publié le {{ document.date|date("d/m/Y") }} </p>
          </header>
          <p>
          {% autoescape false %}
            {{ document.contenu }}
          {% endautoescape %}  
          </p>
        </div>
      </article>
    {% endfor %}
  {% endfor %}
 {% endblock %}
